{
  "private": true,
  "version":"1.0.1",
  "description":"use electron rebuild best blog",
  "name": "best-blog",
  "scripts": {
    "start:umi": "set APP_ROOT=src/renderer && umi dev",
    "build:umi": "set APP_ROOT=src/renderer && umi build",
    "test": "umi test",
    "lint:es": "eslint --ext .js src mock tests",
    "lint:ts": "tslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "start:electron": "set ELECTRON_ENABLE_LOGGING=1 && nodemon --watch * --exec electron app/dist/main/main --enable-logging",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "set ESLINT=none&& set BROWSER=none&& set COMPRESS=none&& set PROGRESS=none&& roadhog build -w",
    "dev:renderer": "set APP_ROOT=src/renderer&& set BROWSER=none&& set ESLINT=none&& umi dev",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "set ESLINT=none&& roadhog build",
    "build:renderer": "set APP_ROOT=src/renderer&& set ESLINT=none&& umi build",
    "pack": "rimraf dist/ && npm run build && npm run rebuild && electron-builder",
    "pack:dir": "npm run build && npm run rebuild && electron-builder --dir",
    "pack:dirOnly": "electron-builder --dir",
    "rebuild": "electron-rebuild -m ./app",
    "push": "git add . && git commit -m \"daily\" && git push origin master"
  },
  "nodemonConfig": {
    "delay" : "2500"
  },
  "dependencies": {
    "antd": "^3.15.0",
    "axios": "^0.18.0",
    "dva": "^2.5.0-beta.2",
    "react": "^16.7.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.7.0",
    "xss": "^1.0.6"
  },
  "build": {
    "copyright":"bestsamcn.me",
    "productName":"best-blog",
    "files": [
      "./dist/**/*",
      "./pages/**/*",
      "./node_modules/**/*"
    ],
    "publish":{
      "provider":"generic",
      "url":"http://10.0.1.143:4000/electron/"
    },
    "appId": "me.bestsamcn",
    "win": {
      "icon": "build/icon.ico"
    },
    "asar": false
  },
  "main": "main.js",
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^11.13.5",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "babel-eslint": "^9.0.0",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^3.0.1",
    "electron-builder": "^20.39.0",
    "electron-prebuilt": "^1.4.13",
    "electron-rebuild": "^1.8.4",
    "eslint": "^5.4.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.11",
    "react-test-renderer": "^16.7.0",
    "roadhog": "^2.4.9",
    "tapable": "^1.1.3",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "umi": "^2.6.1",
    "umi-plugin-react": "^1.6.0",
    "umi-types": "^0.2.0",
    "webpack": "^4.30.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
